#VRML V2.0 utf8

# système d'axe x,y,z avec orientation et code couleur RVB


# axe X en rouge
Shape {
	appearance DEF rouge Appearance { material Material { diffuseColor  0.8 0.0 0.0
														  emissiveColor 0.8 0.0 0.0 }}
	geometry Box { size	4 0.05 0.05 }
}


# flèche de l'axe X
Transform {
	rotation 0 0 1 -1.5708
	translation	2 0 0
	children [
		  Shape {
			appearance USE rouge
			geometry DEF pointe Cone { height 0.2
							bottomRadius 0.1}
			}	
	]
}


# axe Y en vert
Shape {
	appearance DEF vert Appearance { material Material {  diffuseColor  0.0 0.8 0.0
														  emissiveColor 0.0 0.8 0.0 }}
	geometry Box { size	0.05 4 0.05 }
}


# flèche de l'axe Y
Transform {
	translation	0 2 0
	children [
		  Shape {
			appearance USE vert
			geometry USE pointe
			}	
	]
}



# axe Z en bleu
Shape {
	appearance DEF bleu Appearance { material Material { diffuseColor  0.0 0.0 0.8
														 emissiveColor 0.0 0.0 0.8 }}
	geometry Box { size	0.05 0.05 4 }
}

# flèche de l'axe Z
Transform {
	rotation 1 0 0 1.5708
	translation	0 0 2

	children [
		  Shape {
			appearance USE bleu
			geometry USE pointe
			}	
	]
}